<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_perfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="br.iesb.profissionalsearch.Activities.PerfilActivity"
        android:weightSum="1"
        android:layout_margin="4px"
        android:layout_gravity="left">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="63dp"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/imageView"
            android:layout_weight="0.08"
            android:layout_margin="5px" />

        <RatingBar
            android:layout_width="wrap_content"
            android:id="@+id/ratingBar"
            android:rating="10"
            android:layout_marginTop="5dp"
            android:layout_height="20dp"
            android:isIndicator="false"
            android:numStars="10" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/perfil_nome"
            android:hint="nome"
            android:layout_marginTop="4dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/perfil_ramo"
            android:hint="ramo"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/perfil_especialidade">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lista_perfil_especialidade"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/perfil_formacao"
            android:layout_weight="0.15"
            android:hint="formacao"
            android:layout_marginTop="4dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textLongMessage"
            android:ems="10"
            android:id="@+id/perfil_descricao"
            android:layout_weight="0.39"
            android:hint="descricao"
            android:layout_marginTop="4dp" />

        <Button android:layout_width="59dp"
            android:layout_height="59dp"
            android:text="@string/sinalvisto"
            android:textColor="#ffffff"
            android:background="@drawable/fundo"
            android:textSize="30sp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</ScrollView>